# Aura Platform Environment Configuration
# Copy this file to .env and update the values according to your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=aura_platform
POSTGRES_USER=aura_user
POSTGRES_PASSWORD=aura_secure_password_2024

# Database URL for SQLAlchemy
DATABASE_URL=postgresql://aura_user:aura_secure_password_2024@postgres:5432/aura_platform

# =============================================================================
# MESSAGE QUEUE CONFIGURATION
# =============================================================================
# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=aura_user
RABBITMQ_PASSWORD=aura_secure_password_2024
RABBITMQ_VHOST=aura_vhost

# Celery Configuration
CELERY_BROKER_URL=amqp://aura_user:aura_secure_password_2024@rabbitmq:5672/aura_vhost
CELERY_RESULT_BACKEND=rpc://aura_user:aura_secure_password_2024@rabbitmq:5672/aura_vhost

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
# Milvus Configuration
MILVUS_HOST=milvus
MILVUS_PORT=19530
MILVUS_USER=root
MILVUS_PASSWORD=Milvus

# =============================================================================
# SECRETS MANAGEMENT
# =============================================================================
# HashiCorp Vault Configuration
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=aura-dev-token-2024
VAULT_MOUNT_PATH=aura-secrets

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# OpenAI API (Secondary)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# INSTAGRAM API CONFIGURATION
# =============================================================================
# Instagram Basic Display API
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_REDIRECT_URI=https://your-domain.com/auth/instagram/callback

# Instagram Graph API
INSTAGRAM_GRAPH_API_VERSION=v18.0
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=aura_webhook_verify_token_2024

# =============================================================================
# E-COMMERCE INTEGRATION
# =============================================================================
# Shopify Configuration
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# API Gateway Configuration
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000
API_GATEWAY_WORKERS=4
API_GATEWAY_RELOAD=true

# Worker Configuration
INTELLIGENCE_WORKER_CONCURRENCY=4
INGESTION_WORKER_CONCURRENCY=2

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/aura.log

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=aura_jwt_secret_key_2024_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# ENVIRONMENT SPECIFIC
# =============================================================================
ENVIRONMENT=development
DEBUG=true
TESTING=false

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
